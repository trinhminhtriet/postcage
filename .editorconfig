# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Specific settings for JavaScript and Vue files
[*.{js,vue}]
indent_size = 2

# Specific settings for Go files
[*.go]
indent_style = space
tab_width = 2
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
